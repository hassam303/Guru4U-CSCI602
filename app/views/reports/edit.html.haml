- provide(:title, 'Edit Mentor Report')
%h1 Edit Mentor Report
.row
  .col-md-6.col-md-offset-3
    = bootstrap_form_for(@report) do |f|
      = f.text_field :title, id: 'report_title_field'
      = f.text_area :message, id: 'report_message_area'
      = f.form_group do
        = f.check_box :urgent, id: 'report_urgent_checkbox', label: "Urgent?", inline: true
      = f.form_group class: 'centered' do
        = f.primary 'Submit', id: 'report_submit_button'
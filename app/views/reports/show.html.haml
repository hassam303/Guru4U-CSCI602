%h1 #{@student.name}'s Reports
%body
    -@reports.each do |report|
        %h3 #{report.title}
        %p Last Edit: #{report.updated_at}

        %p #{report.message}
        -if report.urgent
            %p Urgent!
        = link_to "Edit", edit_report_path(report.id,user_id: current_user.id), id: "edit_report_#{report.id}", method: :get
        
         
        
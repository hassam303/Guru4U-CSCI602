- provide(:title, "Forgot password")
%h1 Forgot password
.row
  .col-md-6.col-md-offset-3
    = bootstrap_form_for(:password_reset, url: password_resets_path) do |f|
      = f.email_field :email
      = f.form_group class: 'centered' do
        = f.primary "Submit Reset Request", id: "submit_reset_request_button"

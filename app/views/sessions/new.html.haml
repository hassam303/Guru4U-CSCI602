- provide(:title, "Log in")
%h1 Log in
.row
  .col-md-6.col-md-offset-3
    = bootstrap_form_for(:session, url: login_path) do |f|
      = f.email_field :email
      = f.password_field :password, append: link_to("forgot password", new_password_reset_path, id: "forgotten_password_link")
      = f.form_group do
        = f.check_box :remember_me, label: "Remember me on this computer", id: 'remember_me_checkbox'
      = f.form_group class: 'centered' do
        = f.primary "Log in", id: 'log_in_button'